/* pages/comment/comment.wxss */
/* 1.电影背景图片，虚化效果 */
.detail-container{
  height:400rpx;
  filter:blur(40rpx);/*模糊滤镜*/
  opacity:.9;/*透明度*/
}
/* 2.电影背景遮罩层 显示背景底层*/
.detail-mask{
  width:100%;          /*宽度*/
  height:400rpx;       /*高度*/
  position:absolute;   /*绝对定位*/
  background:#333;   /*深色背景*/
  top:0;               
  left:0;              
  z-index:-1;  /*显示底层*/
}

/* 3.电影详细信息 */
.detail-info{
  position:absolute;  /*定位*/
  display:flex;       /*弹性布局*/
  top:0;
  left:0;
  width:100%;
  height:400rpx;    /*高度遮罩层一致*/
  padding:20rpx;     /*内补丁*/
}
/*4. 左侧大图 */
.detail-img{
  width:280rpx; /*大图宽度*/
  height:90%;   /*大图高度*/
  margin-right:24rpx;  /*与右侧文字间距*/
}
/* 5.右侧区域 */
.detail{
  flex-grow:1;/*文字占满剩余空间*/
  line-height:60rpx;  /*行高*/
  color:#fff;       /*文字颜色*/
  font-size:24rpx;     /*文字大小*/
}
/* 6.评分样式 */
.detail-sc{
  color:#fc0;  /*橙色评分样式*/
  font-size:36rpx;  /*文字大小*/
}
/* 7.电影描述 */
.desc{
   padding:20rpx;      /*添加内补丁 内边距*/
   font-size:24rpx;    /*文字大小*/
   color:#555;    /*颜色*/
}
/* 8.预览图片 */
.comment-img{
  width:200rpx;
  height:200rpx;
  margin-right:20rpx;
}